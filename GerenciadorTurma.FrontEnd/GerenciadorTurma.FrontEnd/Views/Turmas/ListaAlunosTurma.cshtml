@model GerenciadorTurma.FrontEnd.Models.AlunoTurma

@{
    ViewData["Title"] = "Turma";
}

<h1>Turma @Model.Turma.turma.ToString()</h1>

<h3>Turma</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Turma
            </th>
            <th>
                Curso Id
            </th>
            <th>
                Ano
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Turma.Id)
            </td>
            <td>
                @Html.DisplayFor(model => model.Turma.turma)
            </td>
            <td>
                @Html.DisplayFor(model => model.Turma.Curso_id)
            </td>
             <td>
               @Html.DisplayFor(model => model.Turma.Ano)
            </td>
            <td></td>
        </tr>
    </tbody>
</table>


<br />
<br />
<h3>Alunos cadastrados</h3>
<table class="table">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th>
                Usuario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Alunos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
              <a asp-action="RemoverAlunoDeTurma" asp-route-idAluno="@item.Id" asp-route-idTurma="@Model.Turma.Id">Remover da turma</a> |
            </td>
        </tr>
}
    </tbody>
</table>

<br /><br />
<h3>Alunos não cadastrados</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Usuario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AlunosForaDaTurma)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    <a asp-action="AdicionarAlunoaTurma" asp-route-idAluno="@item.Id" asp-route-idTurma="@Model.Turma.Id">Adicionar a turma</a> |
                    <a asp-controller="Alunos" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

