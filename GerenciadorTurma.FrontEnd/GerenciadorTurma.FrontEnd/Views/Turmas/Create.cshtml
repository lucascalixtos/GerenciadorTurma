@model GerenciadorTurma.FrontEnd.Models.Turma

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Curso_id" class="control-label"></label>
                <input asp-for="Curso_id" class="form-control" />
                <span asp-validation-for="Curso_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="turma" class="control-label"></label>
                <input asp-for="turma" class="form-control" />
                <span asp-validation-for="turma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.MensagemErro))
            {
                <span class="text-danger">@ViewBag.MensagemErro</span>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
